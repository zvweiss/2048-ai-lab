{
  "name": "2048-ai",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/trainer",
    "packages/core"
  ],
  "scripts": {
    "trainer:dev": "npm run core:build && npm --workspace apps/trainer run dev",
    "trainer:build": "npm --workspace apps/trainer run build",
    "trainer:train": "npm --workspace apps/trainer run train",
    "core:build": "npm --workspace packages/core run build",
    "ui:dev": "node scripts/run-ui-dev.mjs",
    "ui:build": "node scripts/run-ui-build.mjs",
    "format:check": "node scripts/format-check.mjs",
    "trainer:eval": "npm --workspace apps/trainer run eval --",
    "eval:500": "npm run trainer:eval -- --games 500",
    "eval:1000": "npm run trainer:eval -- --games 1000",
    "eval:expectimax:v001": "npm run trainer:eval -- --agent expectimax --games 200 --seed 1337 --depth 2 --p2 0.9 --out docs/baselines/expectimax-v001.json"
  }
}
